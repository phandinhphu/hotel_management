@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}

<div class="container py-5 d-flex justify-content-center align-items-center">
    <div class="row w-100 justify-content-center">
        <div class="col-lg-5 col-md-7" style="min-width: 700px">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5 text-center">
                    <img src="~/images/logo.png" alt="Sona Hotel" class="mb-3" />
                    <h2 class="fw-bold mb-3 text-success">Đặt lại mật khẩu thành công</h2>
                    <p class="mb-4">Mật khẩu của bạn đã được đặt lại thành công.</p>
                    <a asp-page="./Login" class="btn btn-primary btn-lg w-100">Đăng nhập ngay</a>
                </div>
            </div>
        </div>
    </div>
</div>
