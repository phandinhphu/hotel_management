@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="container py-5 d-flex justify-content-center align-items-center min-vh-100">
    <div class="row w-100 justify-content-center">
        <div class="col-lg-5 col-md-7" style="min-width: 700px">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5 text-center">
                    <img src="~/images/logo.png" alt="Sona Hotel" class="mb-3" />
                    <h2 class="fw-bold mb-3 text-success">Yêu cầu đặt lại mật khẩu đã được gửi</h2>
                    <p class="mb-4">Vui lòng kiểm tra email của bạn để nhận hướng dẫn đặt lại mật khẩu.</p>
                    <a asp-page="./Login" class="btn btn-primary btn-lg w-100">Quay lại đăng nhập</a>
                </div>
            </div>
        </div>
    </div>
</div>