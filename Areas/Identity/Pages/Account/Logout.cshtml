@page "/dang-xuat"
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="container py-5 d-flex justify-content-center align-items-center">
    <div class="row w-100 justify-content-center">
        <div class="col-lg-5 col-md-7" style="min-width: 700px">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5 text-center">
                    <img src="~/images/logo.png" alt="Sona Hotel" class="mb-3" />
                    <h2 class="fw-bold mb-3">Đăng xuất</h2>
                    @{
                        if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                                asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <button type="submit" class="btn btn-primary btn-lg w-100">Xác nhận đăng xuất</button>
                            </form>
                        }
                        else
                        {
                            <p class="mb-4 text-success">Bạn đã đăng xuất khỏi hệ thống.</p>
                            <a asp-page="./Login" class="btn btn-outline-primary btn-lg w-100">Đăng nhập lại</a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
