@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="container py-5 d-flex justify-content-center align-items-center min-vh-100">
    <div class="row w-100 justify-content-center">
        <div class="col-lg-5 col-md-7" style="min-width: 700px">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <img src="~/images/logo.png" alt="Sona Hotel" class="mb-2" />
                        <h2 class="fw-bold mb-2">Đặt lại mật khẩu</h2>
                        <p class="text-muted">Nhập email và mật khẩu mới để đặt lại mật khẩu tài khoản của bạn</p>
                    </div>
                    <form method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                        <input asp-for="Input.Code" type="hidden" />
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username"
                                aria-required="true" placeholder="Nhập email của bạn" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">Mật khẩu mới</label>
                            <input asp-for="Input.Password" class="form-control form-control-lg"
                                autocomplete="new-password" aria-required="true" placeholder="Nhập mật khẩu mới" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg"
                                autocomplete="new-password" aria-required="true" placeholder="Nhập lại mật khẩu mới" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">Đặt lại mật khẩu</button>
                        <div class="text-center">
                            <a asp-page="./Login" class="small text-decoration-none">Quay lại đăng nhập</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
