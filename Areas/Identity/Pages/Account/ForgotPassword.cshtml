@page "/quen-mat-khau"
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container py-5 d-flex justify-content-center align-items-center">
    <div class="row w-100 justify-content-center">
        <div class="col-lg-5 col-md-7" style="min-width: 700px">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <img src="~/images/logo.png" alt="Sona Hotel" class="mb-2" />
                        <h2 class="fw-bold mb-2">Quên mật khẩu</h2>
                        <p class="text-muted">Nhập email để nhận hướng dẫn đặt lại mật khẩu</p>
                    </div>
                    <form method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username"
                                aria-required="true" placeholder="Nhập email của bạn" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">Gửi yêu cầu</button>
                        <div class="text-center">
                            <a asp-page="./Login" class="small text-decoration-none">Quay lại đăng nhập</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
