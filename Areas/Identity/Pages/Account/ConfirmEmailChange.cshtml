@page
@model ConfirmEmailChangeModel
@{
    ViewData["Title"] = "Confirm email change";
}

<div class="container py-5 d-flex justify-content-center align-items-center min-vh-100" style="background: #f8f9fa;">
    <div class="row w-100 justify-content-center">
        <div class="col-lg-5 col-md-7" style="min-width: 700px">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5 text-center">
                    <img src="~/images/logo.png" alt="Sona Hotel" class="mb-3" style="height: 60px;" />
                    <h2 class="fw-bold mb-3 text-success">@ViewData["Title"]</h2>
                    <partial name="_StatusMessage" model="Model.StatusMessage" />
                    <a asp-page="./Login" class="btn btn-primary btn-lg w-100 mt-4">Quay lại đăng nhập</a>
                </div>
            </div>
        </div>
    </div>
</div>
