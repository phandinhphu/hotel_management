@{
    var isAdmin = User.IsInRole("Admin");
}

<!-- Sidebar wrapper start -->
<nav class="sidebar-wrapper">

    <!-- Sidebar brand starts -->
    <div class="sidebar-brand">
        <a asp-area="Admin" asp-controller="Home" class="logo">
            <img src="~/images/logo.png" alt="Sona Hotel" />
        </a>
    </div>
    <!-- Sidebar brand starts -->
    <!-- Sidebar menu starts -->
    @{
        var currentController = Context.GetRouteValue("controller")?.ToString();
    }
    <div class="sidebar-menu">
        <div class="sidebarMenuScroll">
            <ul>
                <li class="@(currentController == "Home" ? "active" : "")">
                    <a asp-area="Admin" asp-controller="Home" class="@(currentController == "Home" ? "current-page" : "")">
                        <i class="bi bi-house"></i>
                        <span class="menu-text">Trang chủ</span>
                    </a>
                </li>
                <li class="@(currentController == "Room" ? "active" : "")">
                    <a asp-area="Admin" asp-controller="Room" asp-action="Index" class="@(currentController == "Room" ? "current-page" : "")">
                        <i class="bi bi-door-closed"></i>
                        <span class="menu-text">Quản lý phòng</span>
                    </a>
                </li>
                <li class="@(currentController == "HotelServices" ? "active" : "")">
                    <a asp-area="Admin" asp-controller="HotelServices" asp-action="Index" class="@(currentController == "HotelServices" ? "current-page" : "")">
                        <i class="bi bi-gear"></i>
                        <span class="menu-text">Quản lý dịch vụ</span>
                    </a>
                </li>
                <li class="@(currentController == "Review" ? "active" : "")">
                    <a asp-area="Admin" asp-controller="Review" asp-action="Index" class="@(currentController == "Review" ? "current-page" : "")">
                        <i class="bi bi-chat-left-text"></i>
                        <span class="menu-text">Quản lý đánh giá</span>
                    </a>
                </li>
                <li class="@(currentController == "Booking" ? "active" : "")">
                    <a asp-area="Admin" asp-controller="Booking" asp-action="Index" class="@(currentController == "Booking" ? "current-page" : "")">
                        <i class="bi bi-calendar2-check"></i>
                        <span class="menu-text">Quản lý đặt phòng</span>
                    </a>
                </li>
                <li class="@(currentController == "Payment" ? "active" : "")">
                    <a asp-area="Admin" asp-controller="Payment" asp-action="Index" class="@(currentController == "Payment" ? "current-page" : "")">
                        <i class="bi bi-credit-card-2-back"></i>
                        <span class="menu-text">Quản lý thanh toán</span>
                    </a>
                </li>
                <li class="@(currentController == "Customer" ? "active" : "")">
                    <a asp-area="Admin" asp-controller="Customer" asp-action="Index" class="@(currentController == "Customer" ? "current-page" : "")">
                        <i class="bi bi-people"></i>
                        <span class="menu-text">Quản lý khách hàng</span>
                    </a>
                </li>
                @if (isAdmin)
                {
                    <li class="@(currentController == "Staff" ? "active" : "")">
                        <a asp-area="Admin" asp-controller="Staff" asp-action="Index" class="@(currentController == "Staff" ? "current-page" : "")">
                            <i class="bi bi-person-bounding-box"></i>
                            <span class="menu-text">Quản lý nhân viên</span>
                        </a>
                    </li>
                    <li class="@(currentController == "Role" ? "active" : "")">
                        <a asp-area="Admin" asp-controller="Role" asp-action="Index" class="@(currentController == "Role" ? "current-page" : "")">
                            <i class="bi bi-person-bounding-box"></i>
                            <span class="menu-text">Phân quyền</span>
                        </a>
                    </li>
                }
                <li>
                    <a href="analysis.html">
                        <i class="bi bi-clipboard-data"></i>
                        <span class="menu-text">Báo cáo & phân tích</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <!-- Sidebar menu ends -->

</nav>
<!-- Sidebar wrapper end -->