@using Hotel_Management.Areas.Admin.ViewModels;
@model HotelfacilitiesVM
@{
	ViewData["Title"] = "Cập nhật tiện nghi khách sạn";
}

<div class="container mt-5">
    <div class="card shadow rounded-4 border-0">
        <div class="card-header bg-success text-white rounded-top-4">
			<h3 class="mb-0">Sửa tiện nghi khách sạn</h3>
        </div>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="card-body mt-2">
            <form asp-area="Admin" asp-controller="Hotelfacilities" asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="HotelId" class="control-label"></label>
                    <select asp-for="HotelId" class="form-control" asp-items="ViewBag.HotelId"></select>
                    <span asp-validation-for="HotelId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="FacilityName" class="control-label"></label>
                    <input asp-for="FacilityName" class="form-control" />
                    <span asp-validation-for="FacilityName" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Hủy
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Lưu thông tin
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
