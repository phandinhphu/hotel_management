@model RoomVM
@*
    Modal Create Room
*@
<div class="modal fade" id="createRoom" data-bs-backdrop="false" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="createRoomLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createRoomLabel">Nhập thông tin phòng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <form asp-area="Admin" asp-controller="Room" asp-action="Create" id="create-room-form" enctype="multipart/form-data" method="post">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-4 col-12">
                            <div id="dropzone-sm1" class="mb-3">
                                <div class="image-upload-container">
                                    <!-- Image -->
                                    <input asp-for="ImageFiles" type="file" id="productImages" class="d-none" accept="image/*" multiple />
                                    <div class="image-preview mt-2">
                                        <img id="imagePreview" src="#" alt="Room preview" style="max-width: 100%; display: none;" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-8 col-12">
                            <div class="row">
                                <div class="col-6">
                                    <!-- RoomNumber -->
                                    <div class="mb-3">
                                        <label for="roomNumber" class="form-label">Số phòng*</label>
                                        <input asp-for="RoomNumber" type="text" class="form-control" id="roomNumber" name="RoomNumber"
                                               placeholder="Nhập số phòng" value="" required>
                                        <div class="invalid-feedback">Vui lòng nhập số phòng.</div>
                                    </div>
                                    <!-- Type -->
                                    <div class="mb-3">
                                        <label for="roomType" class="form-label">Loại phòng*</label>
                                        <select asp-for="Type" class="form-select" id="roomType" name="Type" required>
                                            <option value="">Chọn loại phòng</option>
                                            <option value="Phòng đơn">Phòng đơn</option>
                                            <option value="Phòng đôi">Phòng đôi</option>
                                            <option value="Phòng gia đình">Phòng gia đình</option>
                                            <option value="Phòng VIP">Phòng VIP</option>
                                            <option value="Suite">Phòng Suite</option>
                                            <option value="Phòng President">Phòng President</option>
                                        </select>
                                        <div class="invalid-feedback">Vui lòng chọn loại phòng.</div>
                                    </div>
                                    <!-- Price -->
                                    <div class="mb-3">
                                        <label for="price" class="form-label">Giá phòng (VNĐ)*</label>
                                        <input asp-for="Price" type="number" class="form-control" id="price" name="Price"
                                               placeholder="Nhập giá phòng" min="0" step="0.01" required>
                                        <div class="invalid-feedback">Vui lòng nhập giá phòng hợp lệ.</div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <!-- Status -->
                                    <div class="mb-3">
                                        <label for="roomStatus" class="form-label">Trạng thái phòng*</label>
                                        <select asp-for="Status" class="form-select" id="roomStatus" name="Status" required>
                                            <option value="">Chọn trạng thái</option>
                                            <option value="Available">Còn trống</option>
                                            <option value="Occupied">Đã đặt</option>
                                            <option value="Maintenance">Bảo trì</option>
                                        </select>
                                        <div class="invalid-feedback">Vui lòng chọn trạng thái phòng.</div>
                                    </div>
                                    <!-- HotelId -->
                                    <div class="mb-3">
                                        <label for="hotelId" class="form-label">Khách sạn*</label>
                                        <select asp-for="HotelId" class="form-select" id="hotelId" name="HotelId" required>
                                            <option value="1" selected>Sona Hotel</option>
                                        </select>
                                    </div>
                                    <!-- Capacity -->
                                    <div class="mb-3">
                                        <label for="capacity" class="form-label">Sức chứa*</label>
                                        <input asp-for="Capacity" type="number" class="form-control" id="capacity" name="Capacity"
                                               placeholder="Số người" min="1" required>
                                        <div class="invalid-feedback">Vui lòng nhập sức chứa hợp lệ.</div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <!-- Description -->
                                    <div class="mb-3">
                                        <label for="description" class="form-label">Mô tả phòng</label>
                                        <textarea asp-for="Description" class="form-control" id="description" name="Description"
                                                  placeholder="Nhập mô tả phòng" rows="4"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-success" id="saveRoomBtn">Xác nhận</button>
                </div>
            </form>
        </div>
    </div>
</div>
