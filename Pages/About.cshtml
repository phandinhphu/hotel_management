@page
@model Hotel_Management.Pages.AboutModel
@{
	ViewData["Title"] = "About";
}

<!-- About Section Begin -->
<section class="aboutus-page-section spad">
    <div class="container">
        <div class="about-page-text">
            <div class="row">
                <div class="col-lg-6">
                    <div class="ap-title">
                        <h2>Chào mừng đến với Sona.</h2>
                        <p>
                            Được xây dựng vào năm 1995, khách sạn này nằm ở trung tâm
                            thành phố Quy Nhơn, dễ dàng di chuyển đến các điểm tham quan du lịch của thành phố.
                            Khách sạn cung cấp các phòng được
                            trang trí trang nhã.
                        </p>
                    </div>
                </div>
                <div class="col-lg-5 offset-lg-1">
                    <ul class="ap-services">
                        <li><i class="icon_check"></i> Giảm giá 20% cho chỗ ở.</li>
                        <li><i class="icon_check"></i> Bữa sáng miễn phí hàng ngày</li>
                        <li><i class="icon_check"></i> Giặt 3 món đồ mỗi ngày</li>
                        <li><i class="icon_check"></i> Wifi miễn phí.</li>
                        <li><i class="icon_check"></i> Giảm giá 20% cho F&B</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="about-page-services">
            <div class="row">
                <div class="col-md-4">
                    <div class="ap-service-item set-bg" data-setbg="@Url.Content("~/images/client/about/about-p1.jpg")">
                        <div class="api-text">
                            <h3>Dịch vụ nhà hàng</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="ap-service-item set-bg" data-setbg="@Url.Content("~/images/client/about/about-p2.jpg")">
                        <div class="api-text">
                            <h3>Du lịch & Cắm trại</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="ap-service-item set-bg" data-setbg="@Url.Content("~/images/client/about/about-p3.jpg")">
                        <div class="api-text">
                            <h3>Sự kiện & Tiệc tùng</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- About Section End -->

<!-- Video Section Begin -->
<section class="video-section set-bg" data-setbg="@Url.Content("~/images/client/video-bg.jpg")">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="video-text">
                    <h2>Khám phá khách sạn & dịch vụ của chúng tôi.</h2>
                    <p>CHúng tôi luôn đặt khách hàng lên hàng đầu</p>
                    <a href="https://youtu.be/xWlf7NjKerI?si=o7HqXb6HJuQ8zZeQ" class="play-btn video-popup">
                        <img src="~/images/client/play.png" alt="">
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Video Section End -->

<!-- Gallery Section Begin -->
<section class="gallery-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Phòng trưng bày</span>
                    <h2>Khám phá công việc của chúng tôi</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="gallery-item set-bg" data-setbg="@Url.Content("~/images/client/gallery/gallery-1.jpg")">
                    <div class="gi-text">
                        <h3>Phòng thượng hạng</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="gallery-item set-bg" data-setbg="@Url.Content("~/images/client/gallery/gallery-3.jpg")">
                            <div class="gi-text">
                                <h3>Phòng sang trọng</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="gallery-item set-bg" data-setbg="@Url.Content("~/images/client/gallery/gallery-4.jpg")">
                            <div class="gi-text">
                                <h3>Phòng tổng thống</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="gallery-item large-item set-bg" data-setbg="@Url.Content("~/images/client/gallery/gallery-2.jpg")">
                    <div class="gi-text">
                        <h3>Phòng tân cách cổ điển</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Gallery Section End -->