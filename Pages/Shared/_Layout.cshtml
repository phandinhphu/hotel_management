<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Sona Template">
    <meta name="keywords" content="Sona, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="/images/client/logo.svg" type="image/x-icon" />
    <title>@ViewData["Title"] - SONA Hotel</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Cabin:400,500,600,700&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.5.5/css/simple-line-icons.min.css"
        integrity="sha512-s3LEkzqDjaU6IftDo04vhQplxX9YlUpNNqXxv8z+y2JJe6sbJGgrE+KHk4CB+zFrVG9L9lqv/X+fYuRfqZsM7A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/client/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/client/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/client/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/client/slicknav.min.css" type="text/css">

    <link rel="stylesheet" href="~/css/client/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/css/client/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="~/css/client/style.css" type="text/css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Offcanvas Menu Section Begin -->
    <partial name="_OffcanvasMenu" />
    <!-- Offcanvas Menu Section End -->

    <!-- Header Section Begin -->
    <partial name="_Header" />
    <!-- Header Section End -->

    <!-- Breadcrumb Section Begin -->
    @if (Context.Request.Path != "/")
    {
        <div class="breadcrumb-section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb-text">
                            <h2>@ViewData["Title"]</h2>
                            <div class="bt-option">
                                <a href="@Url.Page("/Index")">Home</a>
                                <span>@ViewData["Title"]</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <!-- Breadcrumb Section End -->

    <!-- Content Section Begin -->
    @RenderBody()
    <!-- Content Section End -->

    <!-- Footer Section Begin -->
    <partial name="_Footer" />
    <!-- Footer Section End -->

    <!-- Search model Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch"><i class="fa-solid fa-xmark"></i></div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Nhập từ khóa.....">
            </form>
        </div>
    </div>
    <!-- Search model end -->
    @await Html.PartialAsync("~/Pages/Shared/_NotificationScripts.cshtml")

    <!-- Js Plugins -->
    <script src="https://kit.fontawesome.com/45418f6dbd.js" crossorigin="anonymous"></script>
    <script src="~/js/client/jquery-3.3.1.min.js"></script>
    <script src="~/js/client/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/client/jquery.magnific-popup.min.js"></script>
    <script src="~/js/client/jquery.nice-select.min.js"></script>
    <script src="~/js/client/jquery-ui.min.js"></script>
    <script src="~/js/client/jquery.slicknav.js"></script>
    <script src="~/js/client/owl.carousel.min.js"></script>
    <script src="~/js/client/main.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>